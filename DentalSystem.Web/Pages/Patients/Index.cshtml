@page
@model DentalSystem.Web.Pages.Patients.IndexModel
@{
    ViewData["Title"] = "All Patients";
}

<h2>All Patients</h2>


<table class="table table-hover table-striped">
    <thead>
        <tr>
            <th>
              Name
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in this.Model.PatientsAll)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    <a href="/Patients/Details/@item.Id">Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>