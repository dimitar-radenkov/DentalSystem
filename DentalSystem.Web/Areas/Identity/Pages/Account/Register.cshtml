@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<h2>@ViewData["Title"]</h2>

<div class="row">
    <div class="col-md-4">
        <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h4>Create a new account.</h4>
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="RegisterBindingModel.Username"></label>
                <input asp-for="RegisterBindingModel.Username" class="form-control" />
                <span asp-validation-for="RegisterBindingModel.Username" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RegisterBindingModel.PhoneNumber"></label>
                <input asp-for="RegisterBindingModel.PhoneNumber" class="form-control" />
                <span asp-validation-for="RegisterBindingModel.PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RegisterBindingModel.Email"></label>
                <input asp-for="RegisterBindingModel.Email" class="form-control" />
                <span asp-validation-for="RegisterBindingModel.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RegisterBindingModel.Password"></label>
                <input asp-for="RegisterBindingModel.Password" class="form-control" />
                <span asp-validation-for="RegisterBindingModel.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RegisterBindingModel.ConfirmPassword"></label>
                <input asp-for="RegisterBindingModel.ConfirmPassword" class="form-control" />
                <span asp-validation-for="RegisterBindingModel.ConfirmPassword" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-default">Register</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
