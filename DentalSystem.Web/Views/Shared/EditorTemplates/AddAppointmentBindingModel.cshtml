@model DentalSystem.Models.BindingModels.AddAppointmentBindingModel
<h2>Add Appointment</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-page="Add" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
           
            <div class="form-group">
                <label asp-for="PatientId" class="control-label"></label>
                <select asp-for="PatientId" asp-items="Model.Patients" class="form-control"></select>
                <span asp-validation-for="PatientId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="DoctorId" class="control-label"></label>
                <select asp-for="DoctorId" asp-items="Model.Doctors" class="form-control"></select>
                <span asp-validation-for="DoctorId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="DateTime" class="control-label"></label>
                <input asp-for="DateTime" class="form-control" />
                <span asp-validation-for="DateTime" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="SelectedManipulations" class="control-label"></label>
                <select asp-for="SelectedManipulations" asp-items="Model.Manipulations" class="form-control"></select>
                <span asp-validation-for="SelectedManipulations" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Add" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>


